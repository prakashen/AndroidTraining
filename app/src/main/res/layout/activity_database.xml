<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ncit.android.prakash.androidtraining.Database.DatabaseActivity">


    <EditText
        android:id="@+id/etStName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Prakash Koirala"
        />
    <LinearLayout
        android:layout_below="@id/etStName"
        android:id="@+id/llBtns"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="50"
            android:layout_width="0dp"
            android:onClick="addUser"
            android:text="Add"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="50"
            android:layout_width="0dp"
            android:text="Delete"
            android:textStyle="bold"
            android:onClick="deleteFirstUser"
            android:layout_height="wrap_content" />
        </LinearLayout>
    <ListView
        android:layout_below="@id/llBtns"
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>
